  def fib2(n: Int) = {
  var fib1 = 1
  var fib2 = 1
  for(i <- 1 until n){
  var temp = fib2;
  fib2 = fib2+fib1;
  fib1 = temp;
  }
  fib2
  }
  
  //tail
  def fib3(n: Int) = {
  	def helper(fib1: Int, fib2: Int, i: Int): Int = {
  	if(i >= n) fib2 else helper(fib2, fib2+fib1, i + 1)
  	}
  	helper(1,1,n)
  }
 
 for(i <- 0 to 10){
 println(fib3(i))
