object recursionSession {
  println("Welcome to the Scala worksheet")
  def inc(n: Int) = n + 1
  def dec(n: Int) = n - 1
  //5.
  //n + m
  def add(n: Int, m: Int) = {
  
  def addHelp(n: Int, count: Int): Int = if(count <= 0) n else addHelp(inc(n), dec(count))
  
  addHelp(n,m)
  }
   
  add(1,2)
  add(2,3)
  add(3,4)
   
  //n * m
  def mul(n: Int, m: Int) = {
  
  def mulHelp(result: Int, count: Int): Int = if(m == 0) 0 else if(count <= 0) result else mulHelp(add(result,n), dec(count))
  
  mulHelp(n,dec(m))
  }
  
  mul(3,0)
  mul(1,2)
  mul(2,3)
  mul(3,4)
  
  //2^m, pow(2,m)
  def exp2(m: Int){
  def expHelp(result: Int, count: Int): Int = if(m == 0) 1 else if(count <= 0) result else expHelp(mul(2,2), dec(count))
  expHelp(2,m)
  }
  
  exp2(0)
  exp2(1)
  exp2(2)
  exp2(3)
  
  
  
  
  
  
  
  
  
  
