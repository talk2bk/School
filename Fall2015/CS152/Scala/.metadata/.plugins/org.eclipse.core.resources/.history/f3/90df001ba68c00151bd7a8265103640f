object regularExpressions {
//social security numbers
val ssnPattern = """^(?!000|666)[0-8][0-9]{2}-(?!00)[0-9]{2}-(?!0000)[0-9]{4}$"""
                                                  //> ssnPattern  : String#228 = ^(?!000|666)[0-8][0-9]{2}-(?!00)[0-9]{2}-(?!0000)
                                 s                //| [0-9]{4}$
"123-45-6789".matches(ssnPattern)                 //> res0: Boolean#2500 = true
"000-45-6789".matches(ssnPattern)                 //> res1: Boolean#2500 = false
//simple sentences
val simplePattern = """ """                       //> simplePattern  : String#228 = " "
//hexadecimal numbers
val hexPattern = """ """                          //> hexPattern  : String#228 = " "
//URLs
val urlPattern = """(http://)?www(\.[a-zA-Z0-9]+)+\.(com|org|gov|edu)((/[a-zA-Z0-9]+)+([a-zA-Z0-9]+)\.html?)?"""
                                                  //> urlPattern  : String#228 = (http://)?www(\.[a-zA-Z0-9]+)+\.(com|org|gov|edu)
                                                  //| ((/[a-zA-Z0-9]+)+([a-zA-Z0-9]+)\.html?)?
"http://www.cs.sjsu.edu/faculty/pearce/modules/courses/F15/cs152/index.htm".matches(urlPattern)
                                                  //> res2: Boolean#2500 = true
"http://www.cs.edu".matches(urlPattern)           //> res3: Boolean#2500 = true
//C identifiers
val cPattern = """ """                            //> cPattern  : String#228 = " "
//US Phone numbers
val phonePattern = """ """                        //> phonePattern  : String#228 = " "

}