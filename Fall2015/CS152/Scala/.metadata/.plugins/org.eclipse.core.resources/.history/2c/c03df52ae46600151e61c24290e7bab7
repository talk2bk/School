object stringSession {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
	
	def isPal(word: String) = word.trim.toLowerCase == word.reverse.trim.toLowerCase
                                                  //> isPal: (word: String)Boolean
	isPal("rotator")                          //> res0: Boolean = true
	isPal("mom ")                             //> res1: Boolean = false
	isPal("Racecar")                          //> res2: Boolean = false
	
}