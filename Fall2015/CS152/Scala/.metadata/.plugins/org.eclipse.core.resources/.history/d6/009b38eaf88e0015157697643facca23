object regularExpressions {
//social security numbers
val ssnPattern = """^(?!000|666)[0-8][0-9]{2}-(?!00)[0-9]{2}-(?!0000)[0-9]{4}$"""
                                 
"123-45-6789".matches(ssnPattern)
"000-45-6789".matches(ssnPattern)
//simple sentences
val simplePattern = """[A-Z][a-zA-Z0-9]+(\s[a-zA-Z0-9]+)+\."""
"Hello I am a sentence.".matches(simplePattern)
"Hello am sentence?".matches(simplePattern)
"this is not a sentence".matches(simplePattern)
//hexadecimal numbers
val hexPattern = """(?:0[xX])?[0-9a-fA-F]+"""
"0x3734c98".matches(hexPattern)
"0x3734d08".matches(hexPattern)
"nothex".matches(hexPattern)
//URLs
val urlPattern = """(http://)?www(\.[a-zA-Z0-9]+)+\.(com|org|gov|edu)((/[a-zA-Z0-9]+)+([a-zA-Z0-9]+)\.html?)?"""
"http://www.cs.sjsu.edu/faculty/pearce/modules/courses/F15/cs152/index.htm".matches(urlPattern)
"http://www.cs.edu".matches(urlPattern)
"www.notaurl.nope".matches(urlPattern)
//C identifiers
val cPattern = """[_A-Za-z]{1}[A-Za-z0-9]+"""
"_yes".matches(cPattern)
"Yes".matches(cPattern)
"yiss".matches(cPattern)
"8=no".matches(cPattern)

//US Phone numbers
val phonePattern = """(1|001)?(\([1-9][0-9]{2}\))?[1-9][0-9][0-9]-[0-9]{4}"""

}