

/**
 * @author CuTs
 */
object Dungeon {
  val random = new scala.util.Random(System.nanoTime())
  
  def main(args: Array[String]) {
    val dragon = new Dragon("hotsman")
    val knight = new Knight("slashlord")
    
    while(dragon.health > 0 && knight.health > 0){
    dragon.attack(knight, random.nextInt(knight.health))
    knight.attack(dragon, random.nextInt(dragon.health))
    }
   println("Dragon: " + dragon.health)
   println("Knight: " + knight.health)
  }
}